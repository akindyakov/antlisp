#!/usr/bin/env python
# encoding: utf-8


def build(ctx):
    ctx.stlib(
        target="antlisp-lib-function-load",
        source = [
            "load.cpp",
        ],
        use=[
            "antlisp-lib-cell",
            "antlisp-lib-cell_ext-string",
            "antlisp-lib-util",
        ],
        lib=[
            "boost_filesystem",
            "boost_system",
        ],
    )
    ctx.program(
        target="load_ut",
        features="test",
        source="load_ut.cpp",
        use=[
            "antlisp-lib-function-load",
        ],
        lib=[
            "boost_filesystem",
            "boost_system",
        ],
    )
    ctx.recurse([
    ])
